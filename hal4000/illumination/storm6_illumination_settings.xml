<?xml version="1.0" encoding="ISO-8859-1"?>
<illumination_settings>

  <control_modules>
     
    <control_module>
      <name>AOTF</name>
      <module_name>sc_hardware.crystalTechnologies.hAotf</module_name>
      <class_name>CrystalTechAOTF64Bit</class_name>
      <parameters>
	<use_fsk type="boolean">true</use_fsk>
      </parameters>
    </control_module>
    
    <control_module>
      <name>cube405</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM15</port>
      </parameters>
    </control_module>
    
    <control_module>
      <name>daq</name>
      <module_name>sc_hardware.nationalInstruments.hNicontrol</module_name>
      <class_name>Nidaq</class_name>
      <parameters>
	<counter_board>PCIe-6353</counter_board>
	<counter_id type="int">0</counter_id>
	<counter_trigger type="int">0</counter_trigger>   <!-- Camera trigger.  PFI0/P1.0 -->
	<waveform_clock>ctr0out</waveform_clock>
      </parameters>
    </control_module>
  </control_modules>

  <channels>

    <!-- 750 laser -->
    <channel>
      <description>750</description>
      <color type="rgb">200,0,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">8000</maximum> <!--50% at 8000, 85% deflection at 15000 -->
	  <channel type="int">0</channel>  <!-- MOD0+ = NI AO 0 -->
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">75.90</on_frequency>
	</parameters>
      </amplitude_modulation>
      
      <analog_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">0</channel>   <!-- MOD0+ = NI AO 0 -->
	  <max_voltage type="float">1.0</max_voltage>
	  <min_voltage type="float">0.0</min_voltage>
	</parameters>
      </analog_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">0</channel>   <!-- FSK0 = NI P0.0 -->
	</parameters>
      </digital_modulation>
    </channel>
	
	 <!-- 647 laser -->
    <channel>
      <description>647</description>
      <color type="rgb">255,0,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">7800</maximum> <!-- 50% deflection at 7800. 100% deflection at 15000 -->
	  <channel type="int">1</channel> <!-- MOD1+ = NI AO 1 -->
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">90.54</on_frequency>
	</parameters>
      </amplitude_modulation>
      
      <analog_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">1</channel>   <!-- MOD1+ = NI AO 1 -->
	  <max_voltage type="float">1.0</max_voltage>
	  <min_voltage type="float">0.0</min_voltage>
	</parameters>
      </analog_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">1</channel>   <!-- FSK1 = NI P0.1 -->
	</parameters>
      </digital_modulation>
    </channel>
	

    <!-- 561 laser -->
    <channel>
      <description>561</description>
      <color type="rgb">255,255,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">7200</maximum> <!-- 50% deflection at 7200. 92% deflection at 15000 -->
	  <channel type="int">2</channel>  <!-- MOD2+ = NI AO 2 -->
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">108.543</on_frequency>
	</parameters>
      </amplitude_modulation>
      
      <analog_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">2</channel>  <!-- MOD2+ = NI AO 2 -->
	  <max_voltage type="float">1.0</max_voltage>
	  <min_voltage type="float">0.0</min_voltage>
	</parameters>
      </analog_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">2</channel>   <!-- FSK2 = NI P0.2 -->
	</parameters>
      </digital_modulation>
    </channel>


    <!-- 488 laser -->
    <channel>
      <description>488</description>
      <color type="rgb">0,100,255</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">7800</maximum> <!-- 50% at 7800, 87% at 15000 -->
	  <channel type="int">3</channel>    <!-- MOD3+ = NI AO 3 -->
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">130.43</on_frequency>  <!--needs updating -->
	</parameters>
      </amplitude_modulation>
      
      <analog_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">3</channel>   <!-- MOD3+ = NI AO 3 --> 
	  <max_voltage type="float">1.0</max_voltage>
	  <min_voltage type="float">0.0</min_voltage>
	</parameters>
      </analog_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">3</channel>  <!-- FSK3 = NI P0.3 -->
	</parameters>
      </digital_modulation>
    </channel>


    <!-- 405 laser -->
    <channel>
      <description>405</description>
      <color type="rgb">255,0,255</color>
      
      <amplitude_modulation>
	<uses>cube405</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>
    
	 <!-- NOT ENABLED, NOT PLUGGED INTO AN ANALOG NI PORT
      <analog_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">6</channel>
	  <max_voltage type="float">5.0</max_voltage>
	  <min_voltage type="float">0.0</min_voltage>
	</parameters>
      </analog_modulation>
    -->

      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6353</board>
	  <channel type="int">8</channel>  <!-- BNC-red = NI P0.8 -->
	</parameters>
      </digital_modulation>
    </channel>


  </channels>

</illumination_settings>
